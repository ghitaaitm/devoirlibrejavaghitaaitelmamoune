<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bank.controller.AddClientController">
    <Label text="Ajouter un Client" style="-fx-font-size: 18px;" />
    <TextField fx:id="nomField" promptText="Nom" />
    <TextField fx:id="prenomField" promptText="Prénom" />
    <TextField fx:id="adresseField" promptText="Adresse" />
    <TextField fx:id="phoneField" promptText="Téléphone" />
    <TextField fx:id="emailField" promptText="Email" />
    <Button text="Ajouter" onAction="#handleAddClient" />
</VBox>
