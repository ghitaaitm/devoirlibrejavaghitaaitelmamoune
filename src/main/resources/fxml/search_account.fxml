<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Alert?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.60"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bank.controller.SearchAccountController">

    <!-- Titre -->
    <Label text="Rechercher un compte" layoutX="140" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Champ pour numéro de compte -->
    <TextField fx:id="accountNumberField" layoutX="150" layoutY="60" promptText="Entrez le numéro du compte"/>

    <!-- Bouton de recherche -->
    <Button text="Rechercher" layoutX="360" layoutY="60" onAction="#handleSearchAccount"/>

    <!-- Zone pour afficher les détails du compte -->
    <Label fx:id="accountDetailsLabel" layoutX="150" layoutY="120" wrapText="true" maxWidth="400"/>

</AnchorPane>
