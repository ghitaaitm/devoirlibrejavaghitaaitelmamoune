<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.bank.ViewAccountController">
    <center>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Account Information" style="-fx-font-size: 20px;" />
            <GridPane hgap="10" vgap="10">
                <Label text="Account ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="accountIdField" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Account Holder Name:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="accountHolderNameField" editable="false" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Balance:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="balanceField" editable="false" GridPane.rowIndex="2" GridPane.columnIndex="1" />
            </GridPane>
            <Button text="Edit Account" onAction="#onEditAccount" />
        </VBox>
    </center>
</BorderPane>
